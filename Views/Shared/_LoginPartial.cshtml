@using Microsoft.AspNetCore.Identity
@using Meeting_Minutes.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
	{
		<li class="nav-item dropdown">
			<a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Hello @UserManager.GetUserName(User)!</a>
			<div class="dropdown-menu">
				<a id="manage" class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Manage Profile</a>
				<div class="dropdown-divider"></div>
				<form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
					<button id="logout" type="submit" class="nav-link btn btn-link text-light">Logout</button>
				</form>
			</div>
		</li>
	}
</ul>
